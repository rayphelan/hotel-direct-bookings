<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Add Room</h5>
</div>
<div class="modal-body">

  <form id="newRoomForm" action="/hotels/room-new" method="POST" autocomplete="off">
  
    <div class="form-group">
      <input type="text" class="form-control" id="roomName" name="roomName" placeholder="Room Name" autocomplete="off">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" id="roomPrice" name="roomPrice" placeholder="Room Price" autocomplete="off">
    </div>
  
  </form>
  
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
  <button type="button" class="btn btn-primary" id="saveButton">Save</button>
</div>

<script>

  $('#saveButton').click(function() {
    $('#newRoomForm').submit();
  })
    
</script>