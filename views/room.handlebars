<div class="container bg-light p50">
  {{#if errors}}
  <div class="alert alert-danger">
    {{#each errors}} {{msg}}. {{/each}}
  </div>
  {{/if}}

  <form id="roomPhotoForm" action="/room_photos/upload/{{room._id}}" enctype="multipart/form-data" method="POST">
    <div class="row">
      <div class="col-md-12">
        <div class="float-right">
          <a href="/hotels/profile/{{user._id}}" class="btn btn-outline-primary">Back to Profile</a>
        </div>
        <h1>
          {{room.roomName}}
        </h1>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">

        {{#if room.photo}}
        <img src="/uploads/{{room.photo}}" class="img-fluid">
        <div class="spacer-10"></div>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletePhotoModal">
          Delete photo
        </button>
        {{else}}
        <p>Upload photo</p>
        <input type="file" name="roomPhoto" class="form-control">
        <div class="spacer-10"></div>
        <button type="submit" class="btn btn-warning">Upload Photo</button>
        {{/if}}


        <a href="/hotels/dashboard" class="btn btn-secondary">Cancel</a>
      </div>
    </div>

  </form>
</div>


<!-- Modal -->
<div class="modal fade" id="deletePhotoModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Photo</h5>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this photo?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" onclick="deleteRoomPhoto('{{room._id}}')">Delete</button>
      </div>
    </div>
  </div>
</div>