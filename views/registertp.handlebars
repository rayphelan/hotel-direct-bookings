<div class="container bg-light p50">  
  {{#if errors}}
  <div class="alert alert-danger">
    {{#each errors}} {{msg}}. {{/each}}
  </div>
  {{/if}}

  <form id="registerForm" action="/trade_partners/registertp" method="POST" autocomplete="off">
    <div class="row">
      <div class="col-md-12">
        <h1>
          <span class="fa fa-sign-in"></span> Register Trade Partner
        </h1>
        <p>Please enter your details to register for a Trade Partner account. Registered Trade Partners will have access to our Hotels API.</p>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label>Trade Partner Name</label>
          <input type="text" class="form-control" placeholder="name" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" placeholder="Email" name="username" value="{{username}}">
        </div>
        <div class="form-group">
          <label>Website</label>
          <input type="text" class="form-control" placeholder="Website" name="website" value="{{website}}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" placeholder="Password" name="password" value="{{password}}">
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <input type="password" class="form-control" placeholder="Confirm Password" name="password2" value="{{password2}}">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <button type="submit" class="btn btn-success">Register</button>
      </div>
    </div>
      
  </form>
</div>

<p class="botto-text">
  Already registered as a Trade Partner?
  <a href="/logintp">Login</a>
</p>