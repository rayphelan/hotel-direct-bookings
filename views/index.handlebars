<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark-transparent">
  <div class="col-md-12 px-0">
    <h1 class="display-4 font-italic">Hotel Direct Bookings</h1>
    <p class="lead my-3">No middle-man commisions. Find the best prices by booking directly with the hotel.</p>
    
  </div>
</div>

<div class="row mb-2">
  {{#each hotels}}
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary">{{category.name}}</strong>
        <h3 class="mb-0">
          <a class="text-dark" href="/hotels/profile/{{_id}}">{{name}}</a>
        </h3>
        <div class="mb-1 text-muted"></div>
        <p class="card-text mb-auto">{{county.name}}, {{locationName}}</p>        
        <a href="/hotels/profile/{{_id}}">View</a>        
      </div>
      {{#if photo}}
        <img class="card-img-right flex-auto d-none d-md-block" src="/uploads/{{photo}}" data-src="images/pool.jpg" alt="{{name}}">
      {{/if}}
    </div>
  </div>
  {{/each}}

</div>


