<div class="login-form mt-50">
  <div class="main-div">

    <div class="panel">

      <h1>
        <span class="fa fa-sign-in"></span> Login
      </h1>

      <p>Please enter your email and password</p>

      {{#if errors}}
        <div class="alert alert-danger">
          {{#each errors}} {{msg}}. {{/each}}
        </div>
      {{/if}}

    </div>

    <form id="loginForm" action="/hotels/login" method="POST" autocomplete="off">

      <div class="form-group">
        <input type="text" class="form-control" id="username" name="username" placeholder="Email" autocomplete="off" value="{{username}}">
      </div>

      <div class="form-group">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="off" value="{{password}}">
      </div>

      <button type="submit" class="btn btn-primary bg-warning">Login</button>

    </form>
  </div>

  <p class="botto-text">
    Need an account?
    <a href="/register">Register</a>
  </p>

  <div class="spacer-50"></div>

</div>